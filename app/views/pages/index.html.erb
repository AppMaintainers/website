                <h3><%= card.project %></h3>
                <p><%= card.solution %></p>
                <div class="row">
                  <div class='sor col-xs-5'>Tools</div>
                  <div class='sor col-xs-offset-2 col-xs-5'>Difficulty</div>
                  <div class='col-xs-5'><%= card.tech.to_s.split.join(", ") %></div>
                  <div class='col-xs-offset-2 col-xs-5'>
                    <% (1..5).each do |circle| %>
                      <div class=<%= card.difficulty >= circle ? "circle_full" : "circle_empty" %> ></div>
                    <% end %>
                  </div>
                </div>
                <div class="arrow"></div>
              </div>
            <% end %>
          
          <div class='button'>
